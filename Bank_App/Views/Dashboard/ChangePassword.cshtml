@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/Template.cshtml";
}

@section styles {
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .password-container {
            width: 100%;
            max-width: 500px;
            padding: 15px;
        }

        .password-card {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            animation: slideUp 0.5s ease;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .password-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .password-header i {
            font-size: 3rem;
            color: #667eea;
            margin-bottom: 1rem;
        }

        .password-header h3 {
            color: #212529;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .password-header p {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .form-floating label {
            color: #6c757d;
        }

        .form-control {
            border: 2px solid #e9ecef;
            padding: 1rem;
            height: auto;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
        }

        .btn-update {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 0.8rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .back-link {
            text-align: center;
            margin-top: 1.5rem;
        }

        .back-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .back-link a:hover {
            color: #764ba2;
        }

        .password-requirements {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1rem;
            font-size: 0.85rem;
        }

        .password-requirements ul {
            margin: 0.5rem 0 0 0;
            padding-left: 1.5rem;
        }

        .password-requirements li {
            margin-bottom: 0.25rem;
            color: #6c757d;
        }
    </style>
}

<div class="password-container">
    <div class="password-card">
        <!-- Header -->
        <div class="password-header">
            <i class="bi bi-shield-lock"></i>
            <h3>Change Password</h3>
            <p>Update your account password</p>
        </div>

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>Success!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error!</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Change Password Form -->
        <form method="post" action="@Url.Action("ChangePassword", "Dashboard")">
            <div class="form-floating mb-3">
                <input type="password" 
                       class="form-control" 
                       id="currentPassword" 
                       name="currentPassword" 
                       placeholder="Current Password"
                       required 
                       autofocus>
                <label for="currentPassword"><i class="bi bi-lock me-2"></i>Current Password</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" 
                       class="form-control" 
                       id="newPassword" 
                       name="newPassword" 
                       placeholder="New Password"
                       minlength="6"
                       required>
                <label for="newPassword"><i class="bi bi-key me-2"></i>New Password</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" 
                       class="form-control" 
                       id="confirmNewPassword" 
                       name="confirmNewPassword" 
                       placeholder="Confirm New Password"
                       minlength="6"
                       required>
                <label for="confirmNewPassword"><i class="bi bi-key-fill me-2"></i>Confirm New Password</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg btn-update">
                    <i class="bi bi-check-circle me-2"></i>Update Password
                </button>
            </div>
        </form>

        <!-- Password Requirements -->
        <div class="password-requirements">
            <strong><i class="bi bi-info-circle me-1"></i>Password Requirements:</strong>
            <ul>
                <li>Minimum 6 characters long</li>
                <li>Must contain at least one letter</li>
                <li>Must contain at least one number</li>
                <li>Cannot be same as current password</li>
            </ul>
        </div>

        <!-- Back Link -->
        <div class="back-link">
            <a href="@Url.Action("Index", "Dashboard")">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Password match validation
        document.getElementById('confirmNewPassword').addEventListener('input', function() {
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = this.value;
            
            if (newPassword !== confirmPassword) {
                this.setCustomValidity('Passwords do not match');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
}
