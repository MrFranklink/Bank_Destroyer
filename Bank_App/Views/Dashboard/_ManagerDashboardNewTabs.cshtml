<!-- Manage Accounts Tab -->
<div class="tab-pane fade" id="manage-accounts" role="tabpanel">
    <h5><i class="bi bi-folder-open"></i> Manage Accounts</h5>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-warning">
                <tr>
                    <th>Account ID</th>
                    <th>Type</th>
                    <th>Customer ID</th>
                    <th>Opened By</th>
                    <th>Open Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Accounts != null && ((List<DB.Account>)ViewBag.Accounts).Count > 0)
                {
                    foreach (var account in (List<DB.Account>)ViewBag.Accounts)
                    {
                        <tr>
                            <td>@account.AccountID</td>
                            <td>
                                @if (account.AccountType == "SAVING") {
                                    <span class="badge bg-success">Savings</span>
                                } else if (account.AccountType == "FIXED-DEPOSIT") {
                                    <span class="badge bg-info">Fixed Deposit</span>
                                } else if (account.AccountType == "LOAN") {
                                    <span class="badge bg-warning text-dark">Loan</span>
                                }
                            </td>
                            <td>@account.CustomerID</td>
                            <td>@account.OpenedBy (@account.OpenedByRole)</td>
                            <td>@account.OpenDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (account.Status == "OPEN") {
                                    <span class="badge bg-success">Open</span>
                                } else {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                            </td>
                            <td>
                                @if (account.Status == "OPEN")
                                {
                                    <form method="post" action="@Url.Action("CloseAccount", "Dashboard")" style="display:inline;">
                                        <input type="hidden" name="accountId" value="@account.AccountID" />
                                        <input type="hidden" name="accountType" value="@account.AccountType" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to close this account?');">
                                            <i class="bi bi-x-circle"></i> Close
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Closed</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="bi bi-info-circle"></i> No accounts found. Open an account to get started.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Staff Management Tab -->
<div class="tab-pane fade" id="staff-mgmt" role="tabpanel">
    <h5><i class="bi bi-gear"></i> Staff Management</h5>
    
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> Deleting customers or employees is permanent and will also delete their associated UserLogin records (via cascade delete trigger).
    </div>

    <!-- Sub-tabs for Customers and Employees -->
    <ul class="nav nav-pills mt-3" id="staffMgmtTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="mgmt-customers-tab" data-bs-toggle="tab" data-bs-target="#mgmt-customers" type="button" role="tab">
                <i class="bi bi-people"></i> Manage Customers
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="mgmt-employees-tab" data-bs-toggle="tab" data-bs-target="#mgmt-employees" type="button" role="tab">
                <i class="bi bi-person-badge"></i> Manage Employees
            </button>
        </li>
    </ul>

    <div class="tab-content mt-4">
        <!-- Manage Customers -->
        <div class="tab-pane fade show active" id="mgmt-customers" role="tabpanel">
            <h6>Customer Management</h6>
            <div class="table-responsive mt-3">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Customer ID</th>
                            <th>Name</th>
                            <th>PAN</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Customers != null && ((List<BankApp.Services.CustomerDTO>)ViewBag.Customers).Count > 0)
                        {
                            foreach (var customer in (List<BankApp.Services.CustomerDTO>)ViewBag.Customers)
                            {
                                <tr>
                                    <td>@customer.Custid</td>
                                    <td>@customer.Custname</td>
                                    <td>@customer.Pan</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td>
                                        <form method="post" action="@Url.Action("DeleteCustomer", "Dashboard")" style="display:inline;">
                                            <input type="hidden" name="custId" value="@customer.Custid" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete customer @customer.Custname? This will also delete their UserLogin and all associated accounts!');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No customers found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Manage Employees -->
        <div class="tab-pane fade" id="mgmt-employees" role="tabpanel">
            <h6>Employee Management</h6>
            <div class="table-responsive mt-3">
                <table class="table table-striped table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>PAN</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Employees != null && ((List<BankApp.Services.EmployeeDTO>)ViewBag.Employees).Count > 0)
                        {
                            foreach (var employee in (List<BankApp.Services.EmployeeDTO>)ViewBag.Employees)
                            {
                                <tr>
                                    <td>@employee.Empid</td>
                                    <td>@employee.EmployeeName</td>
                                    <td>@employee.DeptId</td>
                                    <td>@employee.Pan</td>
                                    <td>
                                        <form method="post" action="@Url.Action("DeleteEmployee", "Dashboard")" style="display:inline;">
                                            <input type="hidden" name="empId" value="@employee.Empid" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete employee @employee.EmployeeName? This will also delete their UserLogin!');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No employees found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
