@using BankApp.Services
@{
    ViewBag.Title = "Manager Dashboard";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-shield-check"></i> Manager Dashboard</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4>?? Welcome, @ViewBag.UserName!</h4>
                <p><strong>User ID:</strong> @ViewBag.UserID</p>
                <p><strong>Manager ID:</strong> @ViewBag.ReferenceID</p>
                <p><strong>Role:</strong> @ViewBag.Role</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ShowCredentials"] != null && TempData["ShowCredentials"].ToString() == "True")
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <h5><i class="bi bi-key-fill"></i> @TempData["CredentialsTitle"]</h5>
                    <hr />
                    <p><strong>ID:</strong> <code>@TempData["CredentialsId"]</code></p>
                    <p><strong>Username:</strong> <code>@TempData["CredentialsUsername"]</code></p>
                    <p><strong>Password:</strong> <code>@TempData["CredentialsPassword"]</code></p>
                    <small class="text-muted">?? Please save these credentials and share them securely with the user.</small>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <i class="bi bi-people" style="font-size: 3rem; color: #dc3545;"></i>
                            <h5 class="mt-3">Total Employees</h5>
                            <p class="h2">@(ViewBag.EmployeeCount ?? 0)</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <i class="bi bi-person-check" style="font-size: 3rem; color: #dc3545;"></i>
                            <h5 class="mt-3">Total Customers</h5>
                            <p class="h2">@(ViewBag.CustomerCount ?? 0)</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <i class="bi bi-bank" style="font-size: 3rem; color: #dc3545;"></i>
                            <h5 class="mt-3">Total Accounts</h5>
                            <p class="h2">@(ViewBag.AccountCount ?? 0)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabs Section -->
            <div class="card mt-4">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="managerTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="register-customer-tab" data-bs-toggle="tab" data-bs-target="#register-customer" type="button" role="tab">
                                <i class="bi bi-person-plus"></i> Register Customer
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-employee-tab" data-bs-toggle="tab" data-bs-target="#register-employee" type="button" role="tab">
                                <i class="bi bi-person-badge"></i> Register Employee
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="open-accounts-tab" data-bs-toggle="tab" data-bs-target="#open-accounts" type="button" role="tab">
                                <i class="bi bi-bank2"></i> Open Accounts
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="manage-accounts-tab" data-bs-toggle="tab" data-bs-target="#manage-accounts" type="button" role="tab">
                                <i class="bi bi-folder-open"></i> Manage Accounts
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="customer-list-tab" data-bs-toggle="tab" data-bs-target="#customer-list" type="button" role="tab">
                                <i class="bi bi-list-ul"></i> Customer List
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="employee-list-tab" data-bs-toggle="tab" data-bs-target="#employee-list" type="button" role="tab">
                                <i class="bi bi-list-ul"></i> Employee List
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="staff-mgmt-tab" data-bs-toggle="tab" data-bs-target="#staff-mgmt" type="button" role="tab">
                                <i class="bi bi-gear"></i> Staff Management
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content mt-4" id="managerTabsContent">
                        <!-- Register Customer Tab -->
                        <div class="tab-pane fade show active" id="register-customer" role="tabpanel">
                            <h5><i class="bi bi-person-plus-fill"></i> Register New Customer</h5>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> <strong>Auto-Generation:</strong> Customer ID and login credentials will be generated automatically.
                            </div>
                            <form method="post" action="@Url.Action("RegisterCustomer", "Dashboard")" class="mt-3">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Customer Name *</label>
                                        <input name="custName" class="form-control" placeholder="Enter full name" maxlength="50" required />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Date of Birth *</label>
                                        <input name="dob" type="date" class="form-control" required />
                                        <small class="text-muted">Must be 18+ years old</small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">PAN Number *</label>
                                        <input name="pan" class="form-control" placeholder="e.g., ABCD1234" maxlength="8" pattern="[A-Za-z]{4}[0-9]{4}" required />
                                        <small class="text-muted">Format: 4 letters + 4 digits</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Phone Number</label>
                                        <input name="phone" class="form-control" placeholder="Enter phone number" maxlength="15" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label fw-bold">Address</label>
                                        <textarea name="address" class="form-control" placeholder="Enter address" maxlength="100" rows="2"></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Register Customer
                                </button>
                            </form>
                        </div>

                        <!-- Register Employee Tab -->
                        <div class="tab-pane fade" id="register-employee" role="tabpanel">
                            <h5><i class="bi bi-person-badge-fill"></i> Register New Employee</h5>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> <strong>Auto-Generation:</strong> Employee ID (starts with 26) and login credentials will be generated automatically.
                            </div>
                            <form method="post" action="@Url.Action("RegisterEmployee", "Dashboard")" class="mt-3">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Employee Name *</label>
                                        <input name="empName" class="form-control" placeholder="Enter full name" maxlength="50" required />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Department *</label>
                                        <select name="deptId" class="form-select" required>
                                            <option value="">-- Select Department --</option>
                                            <option value="DEPT01">DEPT01 - Deposit Management</option>
                                            <option value="DEPT02">DEPT02 - Loan Management</option>
                                            <option value="DEPT03">DEPT03 - HR Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">PAN Number *</label>
                                        <input name="pan" class="form-control" placeholder="e.g., ABCD1234" maxlength="8" pattern="[A-Za-z]{4}[0-9]{4}" required />
                                        <small class="text-muted">Format: 4 letters + 4 digits</small>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Register Employee
                                </button>
                            </form>
                        </div>

                        <!-- Open Accounts Tab -->
                        <div class="tab-pane fade" id="open-accounts" role="tabpanel">
                            <h5><i class="bi bi-bank2"></i> Open New Account</h5>
                            
                            <!-- Sub-tabs for different account types -->
                            <ul class="nav nav-pills mt-3" id="accountTypeTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="savings-tab" data-bs-toggle="tab" data-bs-target="#savings-account" type="button" role="tab">
                                        <i class="bi bi-piggy-bank"></i> Savings Account
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="fd-tab" data-bs-toggle="tab" data-bs-target="#fd-account" type="button" role="tab">
                                        <i class="bi bi-cash-stack"></i> Fixed Deposit
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="loan-tab" data-bs-toggle="tab" data-bs-target="#loan-account" type="button" role="tab">
                                        <i class="bi bi-credit-card"></i> Loan Account
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content mt-4">
                                <!-- Savings Account Form -->
                                <div class="tab-pane fade show active" id="savings-account" role="tabpanel">
                                    <div class="alert alert-info">
                                        <strong><i class="bi bi-info-circle"></i> Business Rules:</strong>
                                        <ul class="mb-0">
                                            <li>Minimum deposit: Rs. 1,000</li>
                                            <li>Customer can have only 1 savings account</li>
                                            <li>Account ID will be auto-generated</li>
                                        </ul>
                                    </div>
                                    <form method="post" action="@Url.Action("OpenSavingsAccount", "Dashboard")">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Customer ID *</label>
                                                <input name="customerId" class="form-control" placeholder="e.g., MLA00001" required />
                                                <small class="text-muted">Enter existing customer ID</small>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Initial Deposit (Rs.) *</label>
                                                <input name="initialDeposit" type="number" step="0.01" min="1000" class="form-control" placeholder="Minimum Rs. 1,000" required />
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-circle"></i> Open Savings Account
                                        </button>
                                    </form>
                                </div>

                                <!-- Fixed Deposit Form -->
                                <div class="tab-pane fade" id="fd-account" role="tabpanel">
                                    <div class="alert alert-info">
                                        <strong><i class="bi bi-info-circle"></i> Business Rules:</strong>
                                        <ul class="mb-0">
                                            <li>Minimum deposit: Rs. 10,000</li>
                                            <li>Interest: 6% (?1 year), 7% (1-2 years), 8% (>2 years)</li>
                                            <li>Senior citizens get +0.5% bonus</li>
                                            <li>Maturity amount will be calculated automatically</li>
                                        </ul>
                                    </div>
                                    <form method="post" action="@Url.Action("OpenFixedDepositAccount", "Dashboard")">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Customer ID *</label>
                                                <input name="customerId" class="form-control" placeholder="e.g., MLA00001" required />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Deposit Amount (Rs.) *</label>
                                                <input name="amount" type="number" step="0.01" min="10000" class="form-control" placeholder="Minimum Rs. 10,000" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Start Date *</label>
                                                <input name="startDate" type="date" class="form-control" required />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Tenure (Months) *</label>
                                                <input name="tenureMonths" type="number" min="1" class="form-control" placeholder="e.g., 12, 24, 36" required />
                                                <small class="text-muted">Interest rate depends on tenure</small>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-circle"></i> Open Fixed Deposit
                                        </button>
                                    </form>
                                </div>

                                <!-- Loan Account Form -->
                                <div class="tab-pane fade" id="loan-account" role="tabpanel">
                                    <div class="alert alert-info">
                                        <strong><i class="bi bi-info-circle"></i> Business Rules:</strong>
                                        <ul class="mb-0">
                                            <li>Minimum loan: Rs. 10,000</li>
                                            <li>Interest: 10% (?5L), 9.5% (5L-10L), 9% (>10L)</li>
                                            <li>EMI cannot exceed 60% of monthly salary</li>
                                            <li>Senior citizens: max Rs. 1 lakh, 9.5% interest</li>
                                        </ul>
                                    </div>
                                    <form method="post" action="@Url.Action("OpenLoanAccount", "Dashboard")">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Customer ID *</label>
                                                <input name="customerId" class="form-control" placeholder="e.g., MLA00001" required />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Loan Amount (Rs.) *</label>
                                                <input name="loanAmount" type="number" step="0.01" min="10000" class="form-control" placeholder="Minimum Rs. 10,000" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Start Date *</label>
                                                <input name="startDate" type="date" class="form-control" required />
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Tenure (Months) *</label>
                                                <input name="tenureMonths" type="number" min="1" class="form-control" placeholder="e.g., 12, 24, 36, 60" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-bold">Monthly Salary (Rs.) *</label>
                                                <input name="monthlySalary" type="number" step="0.01" min="1" class="form-control" placeholder="Customer's monthly take-home" required />
                                                <small class="text-muted">For EMI calculation (max 60%)</small>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-circle"></i> Sanction Loan
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Manage Accounts Tab -->
                        <div class="tab-pane fade" id="manage-accounts" role="tabpanel">
                            <h5><i class="bi bi-folder-open"></i> Manage Accounts</h5>
                            <p class="text-muted">
                                Under development. This tab will allow managers to view and manage customer accounts, including savings, fixed deposits, and loan accounts.
                            </p>
                        </div>

                        <!-- Customer List Tab -->
                        <div class="tab-pane fade" id="customer-list" role="tabpanel">
                            <h5><i class="bi bi-list-ul"></i> Customer List</h5>
                            <div class="table-responsive mt-3">
                                <table class="table table-striped table-hover">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>Customer ID</th>
                                            <th>Name</th>
                                            <th>PAN</th>
                                            <th>Phone</th>
                                            <th>Date of Birth</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.Customers != null && ((List<CustomerDTO>)ViewBag.Customers).Count > 0)
                                        {
                                            foreach (var customer in (List<CustomerDTO>)ViewBag.Customers)
                                            {
                                                <tr>
                                                    <td>@customer.Custid</td>
                                                    <td>@customer.Custname</td>
                                                    <td>@customer.Pan</td>
                                                    <td>@customer.PhoneNumber</td>
                                                    <td>@(customer.DOB.HasValue ? customer.DOB.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                                                    <td>@customer.Address</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center text-muted">
                                                    <i class="bi bi-info-circle"></i> No customers found. Register a customer to get started.
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Employee List Tab -->
                        <div class="tab-pane fade" id="employee-list" role="tabpanel">
                            <h5><i class="bi bi-list-ul"></i> Employee List</h5>
                            <div class="table-responsive mt-3">
                                <table class="table table-striped table-hover">
                                    <thead class="table-success">
                                        <tr>
                                            <th>Employee ID</th>
                                            <th>Name</th>
                                            <th>Department ID</th>
                                            <th>PAN</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.Employees != null && ((List<EmployeeDTO>)ViewBag.Employees).Count > 0)
                                        {
                                            foreach (var employee in (List<EmployeeDTO>)ViewBag.Employees)
                                            {
                                                <tr>
                                                    <td>@employee.Empid</td>
                                                    <td>@employee.EmployeeName</td>
                                                    <td>@employee.DeptId</td>
                                                    <td>@employee.Pan</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">
                                                    <i class="bi bi-info-circle"></i> No employees found. Register an employee to get started.
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Staff Management Tab -->
                        <div class="tab-pane fade" id="staff-mgmt" role="tabpanel">
                            <h5><i class="bi bi-gear"></i> Staff Management</h5>
                            <p class="text-muted">
                                Under development. This tab will allow managers to manage staff details, including adding, removing, and modifying staff information.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-tabs .nav-link {
        color: #495057;
        font-weight: 500;
    }

    .nav-tabs .nav-link.active {
        color: #dc3545;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    code {
        background-color: #f8f9fa;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
    }
</style>
