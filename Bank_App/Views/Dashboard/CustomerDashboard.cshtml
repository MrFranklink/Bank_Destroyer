@{
    ViewBag.Title = "Customer Dashboard";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3><i class="bi bi-person-circle"></i> Customer Dashboard</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4>? Welcome, @ViewBag.UserName!</h4>
                <p><strong>User ID:</strong> @ViewBag.UserID</p>
                <p><strong>Customer ID:</strong> @ViewBag.ReferenceID</p>
                <p><strong>Role:</strong> @ViewBag.Role</p>
            </div>

            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <i class="bi bi-wallet2" style="font-size: 3rem; color: #667eea;"></i>
                            <h5 class="mt-3">Account Balance</h5>
                            <p class="h3">?0.00</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <i class="bi bi-arrow-left-right" style="font-size: 3rem; color: #667eea;"></i>
                            <h5 class="mt-3">Transactions</h5>
                            <p class="h3">0</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <i class="bi bi-cash-stack" style="font-size: 3rem; color: #667eea;"></i>
                            <h5 class="mt-3">Active Loans</h5>
                            <p class="h3">0</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>
