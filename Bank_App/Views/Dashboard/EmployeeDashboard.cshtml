@{
    ViewBag.Title = "Employee Dashboard";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h3><i class="bi bi-briefcase"></i> Employee Dashboard</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4>? Welcome, @ViewBag.UserName!</h4>
                <p><strong>User ID:</strong> @ViewBag.UserID</p>
                <p><strong>Employee ID:</strong> @ViewBag.ReferenceID</p>
                <p><strong>Role:</strong> @ViewBag.Role</p>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5><i class="bi bi-list-task"></i> Quick Actions</h5>
                            <ul class="list-group mt-3">
                                <li class="list-group-item">
                                    <i class="bi bi-person-plus"></i> Open New Account
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-credit-card"></i> Process Transaction
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-search"></i> View Customer Details
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-file-text"></i> Generate Reports
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5><i class="bi bi-bar-chart"></i> Statistics</h5>
                            <div class="mt-3">
                                <p><strong>Total Customers:</strong> <span class="badge bg-primary">0</span></p>
                                <p><strong>Accounts Opened Today:</strong> <span class="badge bg-success">0</span></p>
                                <p><strong>Pending Tasks:</strong> <span class="badge bg-warning">0</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>
